local player = game.Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Create main UI container
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CollectiblesUI"
screenGui.Parent = player.PlayerGui

-- Create frame to hold both collectible displays
local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Size = UDim2.new(0, 150, 0, 150)
mainFrame.Position = UDim2.new(0, 10, 0, 10)
mainFrame.BackgroundTransparency = 1
mainFrame.Parent = screenGui

--[[ Create coin display
local coinFrame = Instance.new("Frame")
coinFrame.Name = "CoinFrame"
coinFrame.Size = UDim2.new(0, 180, 0, 60)
coinFrame.Position = UDim2.new(0, 0, 0, 0)
coinFrame.BackgroundColor3 = Color3.fromRGB(255, 215, 0) -- Gold background
coinFrame.BorderSizePixel = 0
coinFrame.Parent = mainFrame
]]

-- Coin icon (ImageLabel)
local coinIcon = Instance.new("ImageLabel")
coinIcon.Name = "CoinIcon"
coinIcon.Size = UDim2.new(0, 100, 0, 100)
coinIcon.Position = UDim2.new(0, 5, 0.5, -90)
coinIcon.BackgroundTransparency = 1
coinIcon.Image = "rbxthumb://type=Asset&id=14861633855&w=420&h=420" -- Default coin icon (replace with your coin asset ID)
coinIcon.Parent = mainFrame

-- Coin count label
local coinLabel = Instance.new("TextLabel")
coinLabel.Name = "CoinLabel"
coinLabel.Size = UDim2.new(0, 160, 0, 60)
coinLabel.Position = UDim2.new(0, 100, 0.5, -70)
coinLabel.BackgroundTransparency = 1
coinLabel.Text = "x 0"
coinLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
coinLabel.TextXAlignment = Enum.TextXAlignment.Left
coinLabel.TextScaled = false
coinLabel.TextSize = 48
coinLabel.Font = Enum.Font.GothamBold
coinLabel.Parent = mainFrame

--[[ Create crystal display
local crystalFrame = Instance.new("Frame")
crystalFrame.Name = "CrystalFrame"
crystalFrame.Size = UDim2.new(0, 180, 0, 60)
crystalFrame.Position = UDim2.new(0, 200, 0, 0)
crystalFrame.BackgroundColor3 = Color3.fromRGB(0, 255, 127) -- Emerald background
crystalFrame.BorderSizePixel = 0
crystalFrame.Parent = mainFrame
]]

-- Crystal icon (ImageLabel)
