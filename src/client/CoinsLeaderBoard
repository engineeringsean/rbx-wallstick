-- Add rounded corners to frames
local function addRoundedCorners(frame)
	local corner = Instance.new("UICorner")
	corner.CornerRadius = UDim.new(0, 10)
	corner.Parent = frame
end

--addRoundedCorners(coinFrame)
--addRoundedCorners(crystalFrame)

-- Update when collectibles change
local function updateCollectibles()
	local leaderstats = player:WaitForChild("leaderstats")

	-- Update coins
	local coins = leaderstats:WaitForChild("Coins")
	coins.Changed:Connect(function(newVal)
		coinLabel.Text = "x " .. newVal
	end)

	-- Update crystals
	local crystals = leaderstats:WaitForChild("Crystals")
	crystals.Changed:Connect(function(newVal)
		crystalLabel.Text = "x " .. newVal
	end)

	-- Set initial values
	coinLabel.Text = "x " .. coins.Value
	crystalLabel.Text = "x " .. crystals.Value
end

updateCollectibles()